<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Asset Records | IT Asset Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    body {
      background-color: #f8fafc;
    }

    h2 {
      color: #1d4ed8;
      font-weight: 700;
      margin-bottom: 2rem;
    }

    .table-responsive-fixed {
      max-height: 450px;
      overflow-y: auto;
      border: 1px solid #ddd;
      border-radius: 10px;
    }

    .table thead th {
      position: sticky;
      top: 0;
      background-color: #1e3a8a;
      color: white;
      text-align: center;
    }

    .btn-edit {
      background-color: #facc15;
      color: #111827;
      border: none;
    }

    .btn-edit:hover {
      background-color: #eab308;
    }

    .btn-delete {
      background-color: #ef4444;
      color: white;
      border: none;
    }

    .btn-delete:hover {
      background-color: #dc2626;
    }

    .form-select, .form-control {
      border-radius: 8px;
    }

    .no-records {
      font-size: 1.1rem;
      color: #b91c1c;
      font-weight: 600;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <h2 class="text-center">üõ†Ô∏è Edit or Delete Assets</h2>

  <!-- Filter Form -->
  <form method="GET" action="/edit-asset" class="mb-4">
    <div class="row g-2">
      <div class="col-md-4">
        <input type="text" name="query" class="form-control" placeholder="Search by Serial No or Asset ID" value="<%= query || '' %>">
      </div>
	  
      <div class="col-md-4">
        <select name="department" class="form-select">
          <option value="">-- All Departments --</option>
          <% departments.forEach(dep => { %>
            <option value="<%= dep.name %>" <%= department === dep.name ? 'selected' : '' %>><%= dep.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">üîç Search</button>
      </div>
      <div class="col-md-2">
        <a href="/dashboard" class="btn btn-secondary w-100">‚¨Ö Back</a>
      </div>
    </div>
  </form>

  <% if (records && records.length > 0) { %>
    <div class="table-responsive-fixed">
      <table class="table table-bordered text-center mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Asset ID</th>
            <th>Serial No</th>
            <th>Type</th>
            <th>Model</th>
            <th>Department</th>
            <th>Location</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.asset_id %></td>
              <td><%= r.serial_number %></td>
              <td><%= r.asset_type %></td>
              <td><%= r.model_name %></td>
              <td><%= r.department %></td>
              <td><%= r.location %></td>
              <td><%= r.user_name %></td>
              <td>
                <div class="d-flex justify-content-center gap-2">
                  <a href="/edit-form/<%= r.id %>" class="btn btn-sm btn-edit d-flex align-items-center gap-1">
                    <i class="fas fa-pencil-alt"></i> Edit
                  </a>
                  <a href="/delete/<%= r.id %>" class="btn btn-sm btn-delete d-flex align-items-center gap-1"
                     onclick="return confirm('Are you sure you want to delete this asset?')">
                    <i class="fas fa-trash"></i> Delete
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else if (query || department) { %>
    <div class="alert alert-warning text-center mt-4 no-records">
      üö´ No records found for your search/filter.
    </div>
  <% } %>
</div>
</body>
</html>
