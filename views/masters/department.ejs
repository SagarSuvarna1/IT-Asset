<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Department Master</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    body {
      background-color: #f4f6fa;
      font-family: 'Segoe UI', sans-serif;
    }
    h3 {
      font-weight: bold;
      color: #1e3a8a;
    }
    .scroll-table {
      max-height: 460px;
      overflow-y: auto;
      border: 1px solid #dee2e6;
      border-radius: 8px;
    }
    th.sticky-top {
      position: sticky;
      top: 0;
      background-color: #e3f2fd;
      z-index: 1;
    }
  </style>
</head>
<body>

<div class="container mt-4">
  <div class="card shadow p-4">
    <h3 class="text-center mb-4"><i class="fas fa-building"></i> Department Master</h3>

    <form method="POST" action="/department/add" class="row g-3 align-items-end mb-4">
      <div class="col-md-8">
        <label class="form-label" for="deptName">Department Name</label>
        <input type="text" name="name" id="deptName" class="form-control" placeholder="Enter Department Name" required>
      </div>
      <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus-circle"></i> Add Department</button>
      </div>
    </form>

    <div class="scroll-table">
      <table class="table table-bordered table-hover table-striped bg-white mb-0">
        <thead class="table-primary">
          <tr>
            <th class="sticky-top" style="width: 10%;">ID</th>
            <th class="sticky-top">Department Name</th>
            <th class="sticky-top text-center" style="width: 20%;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (departments.length === 0) { %>
            <tr>
              <td colspan="3" class="text-center text-muted">No departments available.</td>
            </tr>
          <% } else { %>
            <% departments.forEach(dep => { %>
              <tr>
                <td><%= dep.id %></td>
                <td><%= dep.name %></td>
                <td class="text-center">
                  <a href="/department/delete/<%= dep.id %>" 
                     class="btn btn-sm btn-outline-danger" 
                     onclick="return confirm('Delete this department?')">
                    <i class="fas fa-trash-alt"></i> Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <a href="/master-management" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back to Master Management</a>
    </div>
  </div>
</div>

</body>
</html>
