<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bulk Upload Assets | IT Asset Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f0f2f5;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card {
      border-radius: 12px;
    }
    .btn {
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow p-4">
      <h3 class="text-center text-primary mb-4">üì§ Bulk Upload IT Assets</h3>

      <!-- Upload Form -->
      <form action="/upload-assets" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="excelFile" class="form-label">Select Excel (.xlsx) File</label>
          <input type="file" name="excelFile" id="excelFile" class="form-control" accept=".xlsx" required>
        </div>
        <button type="submit" class="btn btn-success w-100">
          ‚¨ÜÔ∏è Upload and Import
        </button>
      </form>

      <!-- Download Template -->
      <div class="text-center mt-4">
        <a href="/download-template" class="btn btn-outline-primary">
          üì• Download Excel Template
        </a>
      </div>

      <!-- Back to Dashboard -->
      <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-secondary">‚¨Ö Back to Dashboard</a>
      </div>
    </div>
  </div>

  <!-- SweetAlert Popup -->
  <% if (typeof message !== 'undefined' && message) { %>
    <script>
      Swal.fire({
        icon: "<%= message.includes('‚úÖ') ? 'success' : 'error' %>",
        title: "<%= message.includes('‚úÖ') ? 'Success' : 'Error' %>",
        text: "<%= message.replace('‚úÖ', '').replace('‚ùå', '').trim() %>",
        confirmButtonColor: "<%= message.includes('‚úÖ') ? '#10b981' : '#ef4444' %>"
      });
    </script>
  <% } %>
</body>
</html>
