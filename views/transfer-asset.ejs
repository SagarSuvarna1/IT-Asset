<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Transfer Asset</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f5f7fa;
    }
    .table-wrapper {
      max-height: 500px;
      overflow-y: auto;
    }
    .table thead th {
      position: sticky;
      top: 0;
      z-index: 1;
    }
    .search-bar {
      background: #fff;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    .btn-warning {
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h3 class="mb-4 text-primary fw-bold">üîÑ Transfer Asset</h3>

    <!-- Search & Department Filter -->
    <form class="row g-2 mb-4 search-bar" method="GET" action="/transfer-asset">
      <div class="col-md-5">
        <input type="text" name="query" class="form-control" placeholder="üîç Search Serial No or Asset ID" value="<%= query %>">
      </div>
      <div class="col-md-4">
        <select name="department" class="form-select">
          <option value="">-- All Departments --</option>
          <% departments.forEach(dep => { %>
            <option value="<%= dep.name %>" <%= department === dep.name ? 'selected' : '' %>><%= dep.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2 d-grid">
        <button class="btn btn-primary">Search</button>
      </div>
      <div class="col-md-1 d-grid">
        <a href="/dashboard" class="btn btn-outline-secondary">‚¨Ö</a>
      </div>
    </form>

    <% if (records.length > 0) { %>
      <div class="table-responsive table-wrapper">
        <table class="table table-bordered align-middle bg-white text-center">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Asset ID</th>
              <th>Serial No</th>
              <th>Department</th>
              <th>Location</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% records.forEach(a => { %>
              <tr>
                <td><%= a.id %></td>
                <td><%= a.asset_id %></td>
                <td><%= a.serial_number %></td>
                <td><%= a.department %></td>
                <td><%= a.location %></td>
                <td>
                  <a class="btn btn-sm btn-warning" href="/transfer-form/<%= a.id %>">Transfer</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center">‚ö†Ô∏è No matching assets found.</div>
    <% } %>

  </div>
</body>
</html>
